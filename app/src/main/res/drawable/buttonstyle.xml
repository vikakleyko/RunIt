<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#b2dfdb" />
            <stroke
                android:width="1dp"
                android:color="#009688" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#b2dfdb"
                android:endColor="#009688"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#009688" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>
</selector>